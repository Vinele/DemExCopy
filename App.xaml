<Application x:Class="FabricsShop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FabricsShop"
             StartupUri="Views\StartWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="StandardButton">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Background" Value="#498C51"/>
        </Style>
        <Style TargetType="Label" x:Key="StandardLabel">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>
        <Style TargetType="TextBox" x:Key="StandardtextBox">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>
    </Application.Resources>
</Application>
